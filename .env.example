# ============================================
# ANNAS AI HUB - Environment Variables
# ============================================

# ============================================
# CORE
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# ============================================
# HUBSPOT CRM
# ============================================
# Get key: HubSpot > Settings > Integrations > Private Apps
# Scopes: crm.objects.contacts.read, deals.read, deals.write, companies.read
HUBSPOT_API_KEY=pat-eu1-...
# Or use OAuth (recommended for production)
HUBSPOT_CLIENT_ID=your-client-id
HUBSPOT_CLIENT_SECRET=your-client-secret

# ============================================
# MONDAY.COM
# ============================================
# Get key: Monday.com > Avatar > Developers > My Access Tokens
MONDAY_API_KEY=your-monday-api-key

# ============================================
# GOOGLE SHEETS
# ============================================
# Path to service account JSON key file
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account.json

# ============================================
# SUPABASE
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# AI PROVIDERS
# ============================================
# Groq (default — fast, free tier available)
GROQ_API_KEY=gsk_...
# Claude (optional — for complex queries)
ANTHROPIC_API_KEY=sk-ant-...
# Which provider to use: groq | claude
AI_PROVIDER=groq

# ============================================
# NOTIFICATIONS (Phase 6)
# ============================================
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=alerts@yourdomain.com
ALERT_EMAIL_TO=team@yourdomain.com

# ============================================
# SERVER
# ============================================
DASHBOARD_PORT=8001
DASHBOARD_URL=http://localhost:8001
CORS_ORIGINS=http://localhost:3000,http://localhost:8001
# Set to true to require X-API-Key header on API endpoints
REQUIRE_API_KEY=false

# ============================================
# LINKEDIN OUTREACH
# ============================================
# Fernet encryption key for LinkedIn session credentials
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
LINKEDIN_ENCRYPTION_KEY=your-fernet-key
# Max age (seconds) before session heartbeat is considered stale
LINKEDIN_HEARTBEAT_MAX_AGE=120

# ============================================
# EMBED (Phase 8)
# ============================================
EMBED_SECRET_KEY=your-random-secret-for-signing-embed-tokens
